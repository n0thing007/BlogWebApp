<%- include("partials/header.ejs") %>

<div class="container">
  <h1>Edit Blog</h1>
  <form action="/edit-submit/<%= index %>" method="POST">
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input type="text" class="form-control" id="title" name="title" value="<%= blog.title %>">
    </div>
    <div class="mb-3">
      <label for="field" class="form-label">Field</label>
      <input type="text" class="form-control" id="field" name="field" value="<%= blog.field %>">
    </div>
    <div class="mb-3">
      <label for="para" class="form-label">Content</label>
      <textarea class="form-control" id="para" name="para" rows="6"><%= blog.para %></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
  </form>
</div>

<%- include("partials/footer.ejs") %>
